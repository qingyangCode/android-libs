<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        style="@style/common_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="title"
         />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="183dp"
        android:layout_height="148dp"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/common_dialog_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:gravity="left"
        android:text="content"
        />

    <Button
        android:id="@+id/btn_top"
        style="@style/common_dialog_button"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_content"
        android:background="@drawable/common_dialog_button_bg_1"
        android:text="top button"
         />

    <Button
        android:id="@+id/btn_bottom"
        style="@style/common_dialog_button"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@id/btn_top"
        android:background="@drawable/common_dialog_button_bg_2"
        android:text="bottom button"
       />

</RelativeLayout>
